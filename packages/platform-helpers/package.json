{
  "name": "@aigne/platform-helpers",
  "version": "0.2.0",
  "description": "AIGNE core library for building AI-powered applications",
  "publishConfig": {
    "access": "public"
  },
  "author": "Arcblock <blocklet@arcblock.io> https://github.com/blocklet",
  "homepage": "https://github.com/AIGNE-io/aigne-framework",
  "license": "Elastic-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AIGNE-io/aigne-framework"
  },
  "files": [
    "lib/cjs",
    "lib/esm",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "type": "module",
  "exports": {
    "./mcp/stdio-client-transport.js": {
      "browser": "./lib/esm/mcp/stdio-client-transport.browser.js",
      "node": {
        "require": "./lib/cjs/mcp/stdio-client-transport.node.js",
        "import": "./lib/esm/mcp/stdio-client-transport.node.js"
      },
      "default": "./lib/esm/mcp/stdio-client-transport.js"
    },
    "./nodejs/index.js": {
      "browser": "./lib/esm/nodejs/index.browser.js",
      "node": {
        "require": "./lib/cjs/nodejs/index.node.js",
        "import": "./lib/esm/nodejs/index.node.js"
      },
      "default": "./lib/esm/nodejs/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/esm/*"
      ]
    }
  },
  "scripts": {
    "lint": "tsc --noEmit",
    "build": "tsc --build scripts/tsconfig.build.json",
    "clean": "rimraf lib test/coverage",
    "prepublishOnly": "run-s clean build",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-reporter=text",
    "postbuild": "echo '{\"type\": \"module\"}' > lib/esm/package.json && echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json"
  },
  "dependencies": {
    "@aigne/json-schema-to-zod": "^1.3.3",
    "@libsql/client": "^0.15.9",
    "@modelcontextprotocol/sdk": "^1.13.3",
    "@types/debug": "^4.1.12",
    "camelize-ts": "^3.0.0",
    "content-type": "^1.0.5",
    "debug": "^4.4.1",
    "drizzle-orm": "^0.44.2",
    "eventsource-parser": "^3.0.3",
    "fast-deep-equal": "^3.1.3",
    "immer": "^10.1.1",
    "mustache": "^4.2.0",
    "nanoid": "^5.1.5",
    "p-retry": "^6.2.1",
    "raw-body": "^3.0.0",
    "sqlocal": "^0.14.1",
    "strict-event-emitter": "^0.5.1",
    "ufo": "^1.6.1",
    "uuid": "^11.1.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/compression": "^1.8.1",
    "@types/content-type": "^1.1.9",
    "@types/express": "^5.0.3",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.0.10",
    "compression": "^1.8.0",
    "detect-port": "^2.1.0",
    "express": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
